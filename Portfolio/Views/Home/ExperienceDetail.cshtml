@model Portfolio.Domain.Entities.ExperienceDtl
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<nav class="custom-breadcrumb" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Experience","Home")">Experience Details</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add</li>
    </ol>
</nav>
<div class="custom-container mt-2" style="height:82vh!important;">
    <div class="heading-left border-bottom mb-2">
        <i class="fa-solid fa-person-circle-check fa-lg me-2"></i>
        Experience Details
    </div>
    <form asp-action="ExperienceDetail" method="post" class="container px-3">
        <input asp-for="Id" type="hidden" id="Id" />
        <div class="row mb-3">
            <div class="col-md-4">
                <label for="Position" class="form-label">Position</label>
                <input asp-for="Position" class="form-control" id="FullName" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label for="Company" class="form-label">Company</label>
                <input asp-for="Company" class="form-control" id="Company" />
                <span asp-validation-for="Company" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label for="Location" class="form-label">Location</label>
                <input asp-for="Location" class="form-control" id="Location" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label for="StartDt" class="form-label">Start Date</label>
                <input asp-for="StartDt" class="form-control" type="date" id="StartDt">
                <span asp-validation-for="StartDt" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="EndDt" class="form-label">End Date</label>
                <input asp-for="EndDt" class="form-control" type="date" id="EndDt">
                <span asp-validation-for="EndDt" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="Skills" class="form-label">Skills</label>
                <textarea asp-for="Skills" class="form-control" id="Skills" rows="2"></textarea>
                <span asp-validation-for="Skills" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4">
                <label for="Achievement" class="form-label">Achievement</label>
                <textarea asp-for="Achievement" class="form-control" id="Achievement" rows="2"></textarea>
                <span asp-validation-for="Achievement" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="JobDescription" class="form-label">Job Description</label>
                <textarea asp-for="JobDescription" class="form-control" id="JobDescription" rows="2"></textarea>
                <span asp-validation-for="JobDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-12 text-end">
                <button type="submit" class="btn btn-primary submit">
                    @if ((Model?.Id ?? 0) > 0)
                    {
                        <span>Update</span>
                    }
                    else
                    {
                        <span>Save</span>
                    }
                </button>
            </div>
        </div>
    </form>
</div>